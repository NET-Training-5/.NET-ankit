@using HumanResources.Web.enums;

@model Employee

<form action="/employee/add" method="post">


    <div class="container">
        <div class="row align-items-start">
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input asp-for=Name type="text" class="form-control">
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">Address</label>
                    <input asp-for=Address class="form-control">
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for=Email class="form-control">
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name=Gender id="male" value="@Gender.Male">
                        <label class="form-check-label" for="Gender">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name=Gender id="female" value="@Gender.Female">
                        <label class="form-check-label" for="Gender">Female</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name=Gender id="others" value="@Gender.Others">
                        <label class="form-check-label" for="Gender">Others</label>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">Date Of Birth</label>
                    <input asp-for=Dob class="form-control">
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">Join Date</label>
                    <input asp-for=JoinDate class="form-control">
                </div>
            </div>
        </div>
        <div class="row align-items-end">
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">Department</label>
                    <input asp-for=Department class="form-control">
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label class="form-label">Designation</label>
                    <input asp-for=Designation class="form-control">
                </div>
            </div>

        </div>
    </div>

    git<button type="submit" class="btn btn-primary">Save</button>
</form>
